                            }
                        });
                    } else {
                        Swal.fire({
                            icon: 'error',
                            title: 'Error!',
                            text: response.msg,
                        });
                    }
                },
                error: function () {
                    alert("Đã xảy ra lỗi. Vui lòng thử lại.");
                }
            });
        });
    });

    //Báo lỗi
