@model IEnumerable<GameStore.Models.BAIDANGCONGDONG>

@{
    ViewBag.Title = "VerifiedPost";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script>

<style>
    /* Các nút nhấn cho các liên kết "Edit," "Details," và "Delete" */
    .link-button {
        display: inline-block;
        padding: 5px 10px;
        margin-right: 5px;
        text-decoration: none;
        color: #fff;
        border-radius: 5px;
    }

        .link-button.edit {
            background-color: #007bff;
        }

        .link-button.details {
            background-color: #28a745;
        }

        .link-button.delete {
            border: none;
            background-color: #dc3545;
        }

        .link-button.manage {
            border: none;
            background-color: #1000ff;
        }

            .link-button.manage:hover {
                cursor: pointer;
                opacity: 0.8;
                color: #fff
            }

        .link-button.delete:hover {
            cursor: pointer;
            opacity: 0.8;
            color: #fff
        }
</style>

<h2 style="text-align:center">
    Community Post
</h2>

<div class="container">
    <table id="example" class="table table-striped table-bordered">
        <thead class="table-dark">
            <tr>
                <th>
                    @Html.DisplayName("Title")
                </th>
                <th style="text-align:center">
                    @Html.DisplayName("Image")
                </th>
                <th style="text-align:center">
                    @Html.DisplayName("Post Date")
                </th>
                <th>Action</th>
            </tr>
            </thead>
            @foreach (var item in Model)
            {
                <tr id="@item.Id_BaiDang">

                    <td>
                        @Html.DisplayFor(modelItem => item.NoiDung)
                    </td>
                    <td style="text-align:center">
                        <img src="@item.HinhAnh" width="150" />

                    </td>

                    <td style="text-align:center">
                        @Html.DisplayFor(modelItem => item.NgayDang)
                    </td>

                    <td>

                        <button class="link-button manage">Accept</button>
                        <button class="link-button delete">Delete</button>

                    </td>
                </tr>
            }

    </table>
    </div>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css" rel="stylesheet" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js"></script>
    <script>
        $(document).ready(function () {
            $("#example").DataTable();
        })

        $(document).ready(function () {
            $(".manage").click(function () {
                let id = $(this).closest("tr").attr("id");
                $.ajax({
                    url: '/Admin/AdCommunity/Verified',
                    type: 'POST',
                    data: { id: id },
                    success: function (response) {
                        if (response.success === true) {
                            toastr.success(response.message, 'Success');
                            setTimeout(function () {
                                location.reload()
                            }, 1500)
                        } else {
                            toastr.error(response.message, 'Fail');
                        }
                    },
                    error: function () {
                        toastr.error('Đã xảy ra lỗi. Vui lòng thử lại.', 'Lỗi');
                    }
                });
            });
            $(".delete").click(function () {
                let id = $(this).closest("tr").attr("id");
                $.ajax({
                    url: '/Admin/AdCommunity/Verified',
                    type: 'POST',
                    data: { id: id },
                    success: function (response) {
                        if (response.success === true) {
                            toastr.success(response.message, 'Success');
                            setTimeout(function () {
                                location.reload()
                            }, 1500)
                        } else {
                            toastr.error(response.message, 'Fail');
                        }
                    },
                    error: function () {
                        toastr.error('Đã xảy ra lỗi. Vui lòng thử lại.', 'Lỗi');
                    }
                });
            });
        })
    </script>
