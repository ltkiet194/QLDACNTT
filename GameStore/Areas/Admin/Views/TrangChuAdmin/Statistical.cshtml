@model IEnumerable<GameStore.Models.DTO.Statistical>

@{
    ViewBag.Title = "Statistical";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script>




<h2 style="text-align:center">Statistical</h2>

<style>
    .data_table {
        background: #fff;
        padding: 15px;
        box-shadow: 1px 3px 5px #aaa;
        border-radius: 5px;
    }
</style>


<div class="container">
    <div class="row">
        <div class="col-12">
            <div class="data_table">
                <table id="example" class="table table-striped table-bordered">
                    <thead class="table-dark">
                        <tr>
                            <th>
                                @Html.DisplayName("Customer name")
                            </th>
                            <th>
                                @Html.DisplayName("Name Game")
                            </th>
                            <th>
                                @Html.DisplayName("Quantity")
                            </th>
                            <th>
                                @Html.DisplayName("Price Game")
                            </th>
                            <th>
                                @Html.DisplayName("Total")
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.NameKH)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Namegame)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Quantity)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.PriceGame)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Total)
                                </td>

                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>



<script>
    $(document).ready(function () {
        var table = $("#example").DataTable({
            buttons: [
                {
                    extend: 'copy',
                    text: 'Copy',
                    filename: 'Danh_sach_khach_hang_mua_game_' + getCurrentDate(),
                    charset: 'utf-8', // Add this line
                    exportOptions: {
                        columns: [0, 1, 2, 3, 4]
                    }
                },
                {
                    extend: 'csv',
                    text: 'CSV',
                    filename: 'Danh_sach_khach_hang_mua_game_' + getCurrentDate(),
                    exportOptions: {
                        columns: [0, 1, 2, 3, 4]
                    }  
                },
                {
                    extend: 'excel',
                    text: 'Excel',
                    filename: 'Danh_sach_khach_hang_mua_game_' + getCurrentDate(),
                    exportOptions: {
                        columns: [0, 1, 2, 3, 4]
                    }
                },
                {
                    extend: 'pdf',
                    text: 'PDF',
                    filename: 'Danh_sach_khach_hang_mua_game_' + getCurrentDate(),
                    exportOptions: {
                        columns: [0, 1, 2, 3, 4]
                    }
                },
                {
                    extend: 'print',
                    text: 'Print',
                    filename: 'Danh_sach_khach_hang_mua_game_' + getCurrentDate(),
                    exportOptions: {
                        columns: [0, 1, 2, 3, 4]
                    }
                }
            ]
        });
        table.buttons().container().appendTo('#example_wrapper .col-md-6:eq(0)');
    });
    function getCurrentDate() {
        var today = new Date();
        var year = today.getFullYear();
        var month = (today.getMonth() + 1).toString().padStart(2, '0');
        var day = today.getDate().toString().padStart(2, '0');
        return year + month + day;
    }
</script>

