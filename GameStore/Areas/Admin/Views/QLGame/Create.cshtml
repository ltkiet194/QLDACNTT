@model GameStore.Models.Game

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h1 style="text-align:center;">Create</h1>

@using (Html.BeginForm("Create", "QLGame", FormMethod.Post, new { enctype = "multipart/form-data" })) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">

        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label>Name Game:</label>
            <input type="text" class="form-control" name="nameGame" />
        </div>
        <div class="form-group">
            <label>Image Game:</label>
            <input type="file" class="form-control" name="imgGame" />
        </div>
        <div class="form-group">
            <label>Tag Game:</label>
            <input type="text" class="form-control" name="tagGame" />
        </div>

        <div class="form-group">
            <label>Type Game:</label>
            <input type="text" class="form-control" name="typeGame" />
        </div>

        <div class="form-group">
            <label>Devs Game:</label>
            <input type="text" class="form-control" name="devsGame" />
        </div>

        <div class="form-group">
            <label>Publisher:</label>
            <input type="text" class="form-control" name="publisher" />
        </div>

        <div class="form-group">
            <label>Price Game:</label>
            <input type="number" class="form-control" name="priceGame" />
        </div>

        <div class="form-group">
            <label>Des Game:</label>
            <textarea  class="form-control" name="desGame" >
        </textarea>
        </div>

        <div class="form-group">
            <label>Year:</label>
            <input type="text" class="form-control" name="yearRelease" />
        </div>

        <div class="form-group">
            <label>Require Game:</label>
            <textarea class="form-control" name="requireGame" >
</textarea>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
